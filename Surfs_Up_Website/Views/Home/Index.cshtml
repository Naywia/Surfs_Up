@model DetailModel

@{
    <partial name="partials/practical_info.cshtml" />
    <partial name="partials/equipment.cshtml" model="@Model" />
    <partial name="partials/book.cshtml" model="@new BookingModel();" />
}


<script type="text/javascript">
    var shouldScroll = false;

    @if (ViewBag.Booking != null && ViewBag.Booking == "true")
    {
        <text>
                shouldScroll = true;
        </text>
    }

    if (shouldScroll) {
        window.addEventListener('load', function () {
            goTo("#book");
        });
    }
</script>