@model DetailModel

@{
    @* <partial name="practical_info.cshtml" /> *@
    Html.RenderPartial("partials/practical_info.cshtml");

    Html.RenderPartial("partials/equipment.cshtml", Model);

    Html.RenderPartial("partials/book.cshtml", new BookingModel());
}


<script type="text/javascript">
    var shouldScroll = false;

    @if (ViewBag.Booking != null && ViewBag.Booking == "true")
    {
        <text>
                shouldScroll = true;
        </text>
    }

    if (shouldScroll) {
        window.addEventListener('load', function () {
            goTo("#book");
        });
    }
</script>