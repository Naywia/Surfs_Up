@{
    ViewData["Title"] = "Hafla og burger emporium";
}

@model List<EquipmentModel>

<h1 id="practical-info" class="display-4">Praktisk info</h1>
<div class="row">
    <div class="col">
        <p>Bacon ipsum dolor amet tongue brisket leberkas salami, t-bone doner kielbasa. Ham hock jerky pork loin
            chislic
            t-bone tri-tip shankle shoulder jowl bresaola. Rump tenderloin tongue pastrami, sausage drumstick andouille
            kielbasa ball tip ground round pork chop. Fatback pastrami corned beef meatloaf pig pork belly leberkas ham
            buffalo porchetta. Spare ribs jowl flank, rump corned beef shank doner meatloaf cow pork loin ham hock
            landjaeger ball tip salami. Ball tip ham t-bone, pancetta tail shoulder ribeye. Tongue brisket spare ribs
            pork
            chop salami chuck alcatra.</p>

        <p>Picanha filet mignon beef alcatra buffalo. Rump turkey tenderloin shankle, sirloin bacon flank. Boudin
            frankfurter corned beef landjaeger shankle pastrami, pig biltong doner buffalo. Filet mignon tri-tip rump
            bresaola picanha pork chop, bacon cow chicken pig tenderloin fatback. Pastrami ham hock picanha ham spare
            ribs,
            landjaeger tongue fatback venison shankle hamburger meatloaf sirloin. Cupim frankfurter shank sirloin
            buffalo,
            rump spare ribs picanha brisket pork chop fatback biltong sausage.</p>
    </div>
    <div class="col-7">
        <div id="surf-carousel" class="carousel slide">
            <div class="carousel-indicators">

                @{
                    string imagePath = "wwwroot/images/carousel";
                    int i = 0;
                    int x = 1;
                    foreach (string imageFileName in Directory.GetFiles(imagePath))
                    {
                        if (i == 0)
                        {
                            <button type="button" data-bs-target="#surf-carousel" data-bs-slide-to="@i" class="active"
                                aria-current="true" aria-label="Slide @x"></button>
                        }
                        else
                        {
                            <button type="button" data-bs-target="#surf-carousel" data-bs-slide-to="@i" aria-current="true"
                                aria-label="Slide @x"></button>
                        }
                        i++;
                        x++;
                    }
                }
            </div>
            <div class="carousel-inner">

                @{
                    int y = 1;
                    foreach (string imageFileName in Directory.GetFiles(imagePath))
                    {
                        string image = "/images/carousel/" + imageFileName.Split("\\")[1];
                        if (y == 1)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@image" alt="image number: @y">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@image" alt="image number: @y">
                            </div>
                        }
                        y++;
                    }
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#surf-carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#surf-carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

<h1 id="equipment" class="display-4">Udstyr</h1>
<p>Bacon ipsum dolor amet beef frankfurter picanha rump shankle. Meatloaf salami frankfurter, ham brisket corned
    beef short loin ham hock. Meatloaf shank tenderloin drumstick venison shoulder chicken rump pork loin
    frankfurter spare ribs buffalo chislic. Capicola leberkas ground round cow short ribs pork chop strip steak. Ham
    hock pork loin picanha t-bone prosciutto boudin pork belly, chicken sausage drumstick pig. Prosciutto brisket
    tail, t-bone doner fatback jowl rump bacon frankfurter.</p>

<p> Frankfurter pork belly venison short loin tail salami ground round andouille shoulder. Cupim beef short loin
    venison, sirloin shankle prosciutto. Meatloaf pork chop beef ribs, chicken picanha swine pork belly beef
    meatball spare ribs bacon alcatra. Shank cow landjaeger pancetta spare ribs pastrami kielbasa frankfurter pork
    belly alcatra pig jerky tail ham hock brisket. Drumstick pork belly brisket, short loin meatball t-bone ground
    round sausage venison turducken shankle burgdoggen tri-tip buffalo. Tail jowl andouille fatback meatloaf
    hamburger frankfurter shoulder cow pancetta.</p>
<div class="grid">
    @foreach (var equipment in Model)
    {
        <div class="card-equipment">
            <div class="image">
                @if (@equipment.Type == "Shortboard")
                {
                    <img src="~/images/boards/shortboard.png" alt="shortboard">
                }
                else if (@equipment.Type == "Longboard")
                {
                    <img src="~/images/boards/longboard.png" alt="longboard">
                }
                else if (@equipment.Type == "Funboard")
                {
                    <img src="~/images/boards/funboard.png" alt="funboard">
                }
                else if (@equipment.Type == "Fish")
                {
                    <img src="~/images/boards/fish.png" alt="fish">
                }
                else if (@equipment.Type == "SUP")
                {
                    <img src="~/images/boards/sup.png" alt="sup">
                }

            </div>
            <div class="content">
                <h4>@equipment.Name</h4>
                <div class="description">
                    <table>
                        <tr>
                            <th>Længde(Inches):</th>
                            <td></td>
                            <td>@equipment.Length</td>
                        </tr>
                        <tr>
                            <th>Bredde(Inches):</th>
                            <td></td>
                            <td>@equipment.Width</td>
                        </tr>
                        <tr>
                            <th>Tykkelse(Inches):</th>
                            <td></td>
                            <td>@equipment.Thickness</td>
                        </tr>
                        <tr>
                            <th>Volumen(L):</th>
                            <td></td>
                            <td>@equipment.Volume</td>
                        </tr>
                        <tr>
                            <th>Type:</th>
                            <td></td>
                            <td>@equipment.Type</td>
                        </tr>
                        <tr>
                            <th>Pris:</th>
                            <td></td>
                            <td>@equipment.Price</td>
                        </tr>
                        @if (@equipment.Equipment != "")
                        {
                            <tr>
                                <th>Tilbehør:</th>
                                <td></td>
                                <td>@equipment.Equipment</td>
                            </tr>
                        }
                    </table>
                    <button>Lej Board</button>
                </div>
            </div>
        </div>
    }
</div>


