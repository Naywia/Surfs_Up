@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="text-light" asp-controller="Account" asp-page="Manage" title="Manage">
        <div>Godav @User.Identity?.Name!</div>
    </a>
    <form class="form-inline" asp-controller="Account" asp-page="Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <button type="submit" class="text-light">Logout</button>
    </form>
}
else
{
    @* <a class="nav-link text-light" asp-controller="Identity" asp-page="/Account/Register">Register</a> *@
    <a class="text-light" asp-controller="Account" asp-action="Login">
        <div>Login</div>
        <hr>
    </a>
}
